<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>

    <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/roomImg"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RoomNumber"
            android:gravity="center"
            android:layout_below="@id/roomImg"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/roomNumber"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:gravity="center"
            android:layout_below="@id/roomNumber"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/roomDescription"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:gravity="center"
            android:layout_below="@id/roomDescription"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/roomDuration"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:gravity="center"
            android:layout_below="@id/roomDuration"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/roomPrice"
    />
    <TextView android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_below="@id/roomPrice"
              android:background="#000000"
              android:layout_marginTop="10dp"/>


</RelativeLayout>